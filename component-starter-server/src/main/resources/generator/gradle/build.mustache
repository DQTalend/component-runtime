apply plugin: 'nebula.provided-base'
apply plugin: 'org.talend.sdk.component'
apply plugin: 'java'
{{#plugins}}
    apply plugin: '{{value}}'
{{/plugins}}

compileJava {
options.fork = true
options.forkOptions.executable = 'javac'
options.compilerArgs += ["-parameters"]
}

compileTestJava {
options.fork = true
options.forkOptions.executable = 'javac'
options.compilerArgs += ["-parameters"]
}

{{#imports}}
import {{value}}
{{/imports}}

buildscript {
  repositories {
    mavenLocal()
    mavenCentral()
    maven {
      url "https://plugins.gradle.org/m2/"
    }
  }
  dependencies {
    classpath "com.netflix.nebula:gradle-extra-configurations-plugin:3.0.3"
    classpath "org.talend.sdk.component:gradle-talend-component:{{tckVersion}}"
    {{#buildDependencies}}
    classpath "{{value}}"
    {{/buildDependencies}}
  }
}

repositories {
  mavenLocal()
  mavenCentral()
}

group = '{{build.group}}'
description = '{{build.description}}'
{{#configurations}}{{#first}}
configurations { {{/first}}
    {{value}}{{#last}}
} {{/last}}{{/configurations}}

{{build.packaging}} {
  baseName = '{{build.artifact}}'
  version = '{{build.version}}'
}

test {
  testLogging.showStandardStreams = true
}
{{#tasks}}
{{value}}
{{/tasks}}
{{#javaMainSourceSets.size}}

sourceSets {
  main {
    java {
      {{#javaMainSourceSets}}
      {{value}}
      {{/javaMainSourceSets}}
    }
  }
}
{{/javaMainSourceSets.size}}

sourceCompatibility = {{build.javaVersion}}
targetCompatibility = {{build.javaVersion}}

repositories {
  mavenCentral()
}

dependencies {
  {{#dependencies}}
  {{value.scope}} group: '{{value.group}}', name: '{{value.artifact}}', version: '{{value.version}}'{{#value.type}}, ext: '{{value.type}}'{{/value.type}}{{#value.classifier}}, classifier: '{{value.classifier}}'{{/value.classifier}}
  {{/dependencies}}
}
