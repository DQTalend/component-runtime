<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.talend.sdk.component</groupId>
    <artifactId>images</artifactId>
    <version>1.50.0-SNAPSHOT</version>
  </parent>

  <artifactId>component-starter-server-image</artifactId>

  <name>Component Runtime :: Images :: Starter</name>

  <properties>
    <additionalDockerFiles>${project.build.outputDirectory}/docker/additional</additionalDockerFiles>
    <image.currentVersion>${project.version}_${maven.build.timestamp}</image.currentVersion>
    <image.tag>${project.version}</image.tag>
    <image.target>talend/common/tacokit/component-starter-server</image.target>
    <imageWorkDir>${baseImageDir}/component-kit</imageWorkDir>
    <talend.server.image.name>${talend.server.image.registry}tacokit/component-starter-server:${talend.image.version}</talend.server.image.name>
    <talend.build.name>${talend.build.name.base}.starter.image</talend.build.name>
    <tsbi.product>component-kit</tsbi.product>
    <tsbi.service>component-starter-server</tsbi.service>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.talend.sdk.component</groupId>
      <artifactId>component-starter-server</artifactId>
      <version>${project.version}</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <!--
        mvn clean verify dockerfile:build -P dev-tsbi -Ddockerfile.build.pullNewerImage=false
        docker tag talend/common/tacokit/component-start-server:${release} artifactory.datapwn.com/tlnd-docker-dev/talend/common/tacokit/component-start-server:${release}
        docker push artifactory.datapwn.com/tlnd-docker-dev/talend/common/tacokit/component-start-server:${release}
        -->
        <groupId>com.spotify</groupId>
        <artifactId>dockerfile-maven-plugin</artifactId>
        <configuration>
          <repository>${image.target}</repository>
          <tag>${image.tag}</tag>
          <dockerfile>Dockerfile</dockerfile>
          <buildArgs>
            <PROJECT_VERSION>${project.version}</PROJECT_VERSION>
            <TIMESTAMP>${maven.build.timestamp}</TIMESTAMP>
            <DOCKER_REGISTRY_HOST>${docker.registryHost}</DOCKER_REGISTRY_HOST>
            <TSBI_IMAGE_PATH>${docker.tsbiPath}</TSBI_IMAGE_PATH>
            <TSBI_VERSION>${docker.tsbiVersion}</TSBI_VERSION>
            <GIT_BRANCH>${git.branch}</GIT_BRANCH>
            <GIT_COMMIT>${git.commit.id}</GIT_COMMIT>
          </buildArgs>
          <skip>${disable.dockerBuild}</skip>
        </configuration>
        <executions>
          <execution>
            <id>default</id>
            <goals>
              <goal>build</goal>
            </goals>
            <phase>none</phase>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
